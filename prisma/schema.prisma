generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quser {
  id        String   @id @default(uuid())
  firstname String?
  lastname  String?
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  smsCode   String?
  Qrcodes   Qrcode[]
  Designs   Design[]
}

//multiple design per Quser, it can be stored and assigned to the QR tshirt 
//you can have your own messages or design ready to asign
model Design {
  id        String   @id @default(uuid())
  name      String
  html      String?
  type      QrType   @default(TEXT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Quser     Quser?   @relation(fields: [quserId], references: [id])
  quserId   String?
}

//current T-shirt QR code
model Qrcode {
  id             String   @id @default(uuid())
  shirtId        String   @unique
  urlCode        String?
  quser          Quser?   @relation(fields: [quserId], references: [id])
  quserId        String?
  type           QrType   @default(TEXT)
  html           String?
  activationCode String   @unique //unique pin code for the qr code and web page for message
  purchased      Boolean  @default(false) //if the tshirt has been purchased
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum QrType {
  REDIRECTION
  CONTACT
  PAYPAL
  CASHAPP
  TEXT
  GIFT
  VIDEO
}
